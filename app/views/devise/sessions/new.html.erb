<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<%= devise_error_messages! %>
<div class="container">
			<div class="row main">
				<div class="main-login main-center">
				<h5>Muhabbet Kuşum için Oturum Açma sayfası</h5>
					<form class="" method="post" action="#">
						
						<div class="form-group">
							<label for="email" class="cols-sm-2 control-label">Email Adresiniz</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-envelope fa" aria-hidden="true"></i></span>
										<%= f.email_field :email,class:"form-control",placeholder:"email adresiniz" %>
								</div>
							</div>
						</div>


						<div class="form-group">
							<label for="password" class="cols-sm-2 control-label">Parola</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                  <%= f.password_field :password,class:"form-control",placeholder:"parola "  %>
								</div>
							</div>
						</div>

              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>
      
            <div class="form-group">
              <%= f.submit "Giriş Yap" %>
            </div>
            
						
					</form>
					<%= render "devise/shared/links" %>
				</div>
			</div>
		</div>
<% end %>

		 
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

<script src="js/bootstrap.min.js"></script>


<%= render 'shared/footer'%>